{
  "extends": ["taro/react", "prettier", "plugin:prettier/recommended"],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },

  "ignorePatterns": [
    "**/__test__/**",
    "/packages/*/dist",
    "/packages/*/lib",
    "/packages/*/node_modules",
    "/packages/*/config"
  ]
}
